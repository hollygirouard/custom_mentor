<% include ./partials/header.ejs %>

<% if (message.length > 0) { %>
	<div class="alert alert-danger" id="alert-message"><%= message %></div>
<% } %>

<h2 class="sub-header" id="welcome">Sign Up Form</h2>
			<div class="container col-md-6" id="login">
				<form action="/signup" method="post">
					<div class="form-group">
						<label for="email" class="h1">Email</label>
						<input type="email" class="form-control"name="email" id="email" placeholder="Enter email">
					</div>
					<div class="form-group">
						<label for="password" class="h1">
							Password
						</label>
						<input type="password" class="form-control" name="password" id="password" placeholder="Enter password">
					</div>
					<button type="submit" class="btn btn-success col-md-12" id="signup-btn">Sign Up!</button>
				</form>
			</div>	
		</div>
